<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/xxhong_ll_downloaddialog"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="#eae9e9"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/xxhong_iv_left"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:layout_gravity="center"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/xxhong_tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="正在下载,请稍候..." />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ProgressBar
                android:id="@+id/xxhong_pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="23dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:paddingTop="5dip" />

            <TextView
                android:id="@+id/xxhong_tv_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/xxhong_iv_left"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dip"
                android:textColor="#000000"
                android:textSize="15sp" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>